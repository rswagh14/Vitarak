<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <ImageView
        android:id="@+id/img_profilepic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:paddingLeft="10dp">

        <TextView
            android:textColor="@color/listnamecolor"
            android:id="@+id/txt_customername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mahesh Jadhav"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_customeraddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="C 1001 Welworth Tincelton, Bavdhan, Pune"/>

    </LinearLayout>


    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="R"
        android:textSize="15dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:textColor="@color/listamountcolor"
        android:id="@+id/txt_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="500000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_weight="0.45"/>
    
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/share"
        android:layout_marginRight="10dp"/>

</LinearLayout>