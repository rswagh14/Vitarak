<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_customer_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appbackground"
    tools:context="com.example.rahul.vitarak.CustomerPayment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:background="@color/appblue">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mahesh Jadhav"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/textcolor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:gravity="end"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fanicon"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:textSize="12dp"
                    android:textColor="@color/textcolor"
                    android:textAlignment="center"/>


            </LinearLayout>

        </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#0D47A1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="0.4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textSize="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/textcolor"
                android:layout_weight="0.7"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23/04/2017"
                android:textSize="12dp"
                android:textColor="@color/textcolor"
                android:layout_weight="0.2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_weight="0.9">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/up"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12,500"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginRight="10dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/textcolor"/>

        </LinearLayout>


    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardElevation="2dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="58dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_orderdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Details"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"/>


                    <ListView
                        android:id="@+id/orderlist"
                        android:layout_below="@+id/txt_orderdetails"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="75dp">

                    </ListView>

                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sub Total"
                                android:textSize="15dp"
                                android:gravity="end"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0.4"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="25,000"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Prev Due"
                                android:textSize="15dp"
                                android:gravity="end"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0.4"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="25,000"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"/>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textSize="15dp"
                                android:gravity="end"
                                android:layout_marginRight="10dp"
                                android:layout_weight="0.4"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="50,000"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"/>


                        </LinearLayout>




                    </LinearLayout>




                </RelativeLayout>





                </android.support.v7.widget.CardView>


        </LinearLayout>

    </LinearLayout>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        card_view:cardElevation="2dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="Pay"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="@drawable/buttonbackground"
            android:textColor="#ffffff"/>


        </android.support.v7.widget.CardView>

</RelativeLayout>
